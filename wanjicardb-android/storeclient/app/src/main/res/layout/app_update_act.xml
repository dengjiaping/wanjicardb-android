<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

	<LinearLayout
		android:id="@+id/update_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="15dp"
		android:layout_marginTop="15dp"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<TextView
			android:id="@+id/txt_update_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerInParent="true"
			android:text="@string/update_title"
			android:textColor="@color/home_title_bg"
			android:textSize="18sp"/>

		<TextView
			android:id="@+id/txt_update_version"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="15dp"/>

		<ImageView
			android:id="@+id/img_upate_alert"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="15dp"
			android:background="@drawable/update_alert_icon"/>
	</LinearLayout>

	<TextView
		android:id="@+id/txt_update_message"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/update_layout"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="15dp"
		android:gravity="center"
		android:textColor="#595959"/>


	<LinearLayout
		android:layout_width="256dp"
		android:layout_height="40dp"
		android:layout_below="@id/txt_update_message"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="15dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/btn_ignore"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginRight="8dp"
			android:layout_weight="1"
			android:background="@drawable/commodity_manage_sold_out"
			android:gravity="center"
			android:paddingBottom="5dp"
			android:paddingTop="5dp"
			android:text="@string/ignore"
			android:textColor="@color/home_title_bg"
			android:visibility="visible"/>

		<TextView
			android:id="@+id/btn_update"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="8dp"
			android:layout_weight="1"
			android:background="@drawable/store_manage_save"
			android:gravity="center"
			android:paddingBottom="5dp"
			android:paddingTop="5dp"
			android:text="@string/upgrade"
			android:textColor="@color/white"/>
	</LinearLayout>
</RelativeLayout>
