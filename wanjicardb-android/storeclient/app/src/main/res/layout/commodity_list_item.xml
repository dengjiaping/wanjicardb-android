<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

	<View
		android:id="@+id/commodity_text_divide"
		android:layout_width="match_parent"
		android:layout_height="15dp"
		android:background="@color/app_bg"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ffffff"
		android:orientation="horizontal"
		android:paddingBottom="20dp"
		android:paddingTop="20dp">

		<include layout="@layout/card_small_logo_view"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="12dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/commodity_list_item_card_detail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="2"
				android:textColor="#333333"
				android:textSize="16sp"/>

			<TextView
				android:id="@+id/commodity_list_item_card_price"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/commodity_list_item_card_detail"
				android:layout_marginTop="4dp"
				android:textColor="#ff4400"
				android:textSize="14sp"/>

			<TextView
				android:id="@+id/commodity_item_card_work_off"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/commodity_list_item_card_price"
				android:layout_marginTop="1dp"
				android:textColor="#999999"
				android:textSize="10sp"/>

			<TextView
				android:id="@+id/commodity_list_item_putaway"
				android:layout_width="80dp"
				android:layout_height="35dp"
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="15dp"
				android:background="@drawable/commodity_manage_sold_out"
				android:clickable="true"
				android:gravity="center"
				android:paddingBottom="5dp"
				android:paddingTop="5dp"
				android:text="上架"
				android:textColor="@color/home_title_bg"
				android:visibility="invisible"/>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
