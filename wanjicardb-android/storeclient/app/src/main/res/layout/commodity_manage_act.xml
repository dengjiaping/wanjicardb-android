<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

	<RadioGroup
		android:id="@+id/commodity_manage_category"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/title_bg"
		android:gravity="center"
		android:orientation="horizontal">

		<RadioButton
			android:id="@+id/commodity_manage_selling"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="52dp"
			android:background="@drawable/commodity_manage_selector"
			android:button="@null"
			android:checked="true"
			android:paddingBottom="13dp"
			android:paddingTop="13dp"
			android:text="@string/commodity_on_offer_layout"
			android:textColor="@color/home_title_bg"/>

		<RadioButton
			android:id="@+id/commodity_manage_sold_out"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="80dp"
			android:layout_marginRight="52dp"
			android:background="@drawable/commodity_manage_selector"
			android:button="@null"
			android:paddingBottom="13dp"
			android:paddingTop="13dp"
			android:text="@string/commodity_solded_out_layout"
			android:textColor="@color/title_text"/>
	</RadioGroup>

	<android.support.v4.view.ViewPager
		android:id="@+id/commodity_manage_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="1px"/>
</LinearLayout>