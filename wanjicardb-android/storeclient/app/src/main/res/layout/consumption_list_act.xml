<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginTop="1px"
		android:background="@color/white">

		<LinearLayout
			android:id="@+id/consumption_subbranch"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center">

			<TextView
				android:id="@+id/consumption_subbranch_tv"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="@string/consumption_all_stores"
				android:textColor="@color/title_text"/>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/consumption_icon"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/consumption_date"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center">

			<TextView
				android:id="@+id/consumption_date_tv"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="@string/consumption_all_times"
				android:textColor="@color/title_text"/>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/consumption_icon"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/consumption_status"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center">

			<TextView
				android:id="@+id/consumption_status_tv"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="@string/consumption_all_status"
				android:textColor="@color/title_text"/>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/consumption_icon"/>
		</LinearLayout>
	</LinearLayout>

	<com.common.widget.FootLoadingListView
		android:id="@+id/consumption_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="1px"
		android:cacheColorHint="#00000000"
		android:divider="@color/app_bg"
		android:dividerHeight="14dp"
		android:fadingEdge="none"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:listSelector="#00000000"
		android:overScrollMode="never"
		android:scrollbars="none"/>
</LinearLayout>