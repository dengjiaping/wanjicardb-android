<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

	<View
		android:id="@+id/commodity_text_divide"
		android:layout_width="match_parent"
		android:layout_height="12dp"
		android:background="@color/app_bg"
		android:visibility="gone"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/title_bg"
		android:paddingBottom="12dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="12dp">

		<TextView
			android:id="@+id/finance_manage_item_money"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/title_text"
			android:textSize="17sp"/>

		<TextView
			android:id="@+id/finance_manage_item_money_detail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/finance_manage_item_money"
			android:layout_marginTop="8dp"
			android:textColor="@color/text_hint"
			android:textSize="12sp"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:gravity="right"
			android:orientation="vertical">

			<TextView
				android:id="@+id/finance_manage_item_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/title_text"
				android:textSize="17sp"/>

			<TextView
				android:id="@+id/finance_manage_item_time_detail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:layout_marginTop="8dp"
				android:textColor="@color/text_hint"
				android:textSize="12sp"/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
