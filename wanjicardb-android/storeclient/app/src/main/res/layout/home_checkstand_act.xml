<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

	<TextView
		android:id="@+id/checkstand_account_txt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="17dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="17dp"
		android:textColor="@color/title_text"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:paddingBottom="17dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="17dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/home_checktand_consume_money"
			android:textColor="@color/title_text"/>

		<EditText
			android:id="@+id/checkstand_amount_edt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="12dp"
			android:background="@null"
			android:hint="@string/home_checktand_income_money"
			android:inputType="numberDecimal"
			android:textColor="@color/title_text"
			android:textColorHint="@color/edit_hint"
			android:textSize="14sp"/>
	</LinearLayout>

	<TextView
		android:id="@+id/checkstand_confirm_btn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="75dp"
		android:background="@drawable/store_manage_conserve"
		android:gravity="center"
		android:paddingBottom="5dp"
		android:paddingTop="5dp"
		android:text="@string/home_checktand_ensure_charge"
		android:textColor="@color/white"/>
</LinearLayout>