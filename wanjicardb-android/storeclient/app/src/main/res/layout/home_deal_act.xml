<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:gravity="center">

		<TextView
			android:id="@+id/deal_result"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="22dp"
			android:layout_marginTop="22dp"
			android:drawableLeft="@drawable/deal_success_icon"
			android:drawablePadding="15dp"
			android:gravity="center_vertical"
			android:text="@string/home_deal_success_charge"
			android:textColor="@color/home_title_bg"
			android:textSize="19sp"/>
	</RelativeLayout>

	<TextView
		android:id="@+id/deal_failed_reason"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:gravity="center"
		android:paddingBottom="22dp"
		android:textColor="@color/title_text"
		android:textSize="13sp"
		android:visibility="gone"/>

	<RelativeLayout
		android:id="@+id/deal_account_all"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:paddingBottom="8dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="8dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="@string/home_deal_consume_account"
			android:textColor="@color/title_text"
			android:textSize="13sp"/>

		<TextView
			android:id="@+id/deal_account"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:textColor="@color/title_text"
			android:textSize="13sp"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/deal_amount_all"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:paddingBottom="8dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="8dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="@string/home_deal_consume_money"
			android:textColor="@color/title_text"
			android:textSize="13sp"/>

		<TextView
			android:id="@+id/deal_amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:textColor="@color/title_text"
			android:textSize="19sp"/>
	</RelativeLayout>

	<TextView
		android:id="@+id/deal_close"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="75dp"
		android:background="@drawable/store_manage_conserve"
		android:gravity="center"
		android:paddingBottom="5dp"
		android:paddingTop="5dp"
		android:text="@string/close"
		android:textColor="@color/white"/>
</LinearLayout>