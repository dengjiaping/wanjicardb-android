<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:orientation="vertical">

	<com.wjika.cardstore.storemanage.crop.ClipImageLayout
		android:id="@+id/store_manage_crop_image"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerInParent="true"
		android:layout_marginBottom="10dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/store_manage_crop_cancel"
			android:layout_width="0dp"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:src="@drawable/store_manage_crop_cancel"/>

		<ImageView
			android:id="@+id/store_manage_crop_done"
			android:layout_width="0dp"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:src="@drawable/store_manage_crop_done"/>
	</LinearLayout>
</RelativeLayout>