<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/store_message_commercial_tenant"
			style="@style/StoreMessageItem">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/store_manager_commercial_name"
				android:textColor="@color/title_text"
				android:textSize="14sp"/>

			<TextView
				android:id="@+id/store_manage_store_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginRight="26dp"
				android:layout_weight="1"
				android:gravity="end"
				android:singleLine="true"
				android:textColor="@color/text_hint"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/store_message_linkman"
			style="@style/StoreMessageItem"
			android:layout_marginTop="1px">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/store_manager_linkman"
				android:textColor="@color/title_text"
				android:textSize="14sp"/>

			<TextView
				android:id="@+id/store_manage_contact"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginRight="26dp"
				android:layout_weight="1"
				android:gravity="end"
				android:singleLine="true"
				android:textColor="@color/text_hint"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/store_message_two_dimension_code"
			style="@style/StoreMessageItem"
			android:layout_marginTop="1px"
			android:paddingRight="0dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/store_manager_store_qrcode"
				android:textColor="@color/title_text"
				android:textSize="14sp"/>

			<TextView
				android:layout_width="14dp"
				android:layout_height="14dp"
				android:layout_marginRight="13dp"
				android:background="@drawable/store_two_dimension_code"/>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/ic_right_arrow"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/store_message_tel"
			style="@style/StoreMessageItem"
			android:layout_marginTop="1px">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/store_manager_phone"
				android:textColor="@color/title_text"
				android:textSize="14sp"/>

			<TextView
				android:id="@+id/store_manage_phone"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginRight="26dp"
				android:gravity="end"
				android:textColor="@color/text_hint"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/store_message_location"
			style="@style/StoreMessageItem"
			android:layout_marginTop="1px">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="100">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/store_manager_address"
					android:textColor="@color/title_text"
					android:textSize="14sp"/>

				<TextView
					android:id="@+id/store_manage_store_address"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_marginLeft="10dp"
					android:gravity="end"
					android:singleLine="true"
					android:textColor="@color/text_hint"/>
			</LinearLayout>

			<ImageView
				android:id="@+id/image_adress"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="10"
				android:background="@drawable/ic_right_arrow"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/store_message_business_hours"
			style="@style/StoreMessageItem"
			android:layout_marginTop="1px">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/store_manager_bussiness_time"
				android:textColor="@color/title_text"
				android:textSize="14sp"/>

			<TextView
				android:id="@+id/store_manage_time"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginRight="26dp"
				android:gravity="end"
				android:textColor="@color/text_hint"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/store_message_merchants_introduced"
			style="@style/StoreMessageItem"
			android:layout_marginTop="1px"
			android:gravity="top">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/store_manager_commercial_info"
				android:textColor="@color/title_text"
				android:textSize="14sp"/>

			<TextView
				android:id="@+id/store_manage_introduce"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="26dp"
				android:textColor="@color/text_hint"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>